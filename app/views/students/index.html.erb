<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1>Students</h1>
<hr>
<div id="students" class="mb-5">
<%= link_to "Add New student", new_student_path, :class => "btn btn-success mb-3" %>
<%= link_to "Download CSV", download_csv_path, :class => "btn btn-primary mb-3" %>
  <div class="table-responsive">
    <table class="table table-striped" id="studentTable">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Gender</i></th>
          <th scope="col">Date of birth</th>
          <th scope="col">Level</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
      <% @students.each_with_index do |student, i| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.gender %>
            <% if student.gender == 'male' %>
              <i class="bi bi-gender-male"></i>
            <% elsif student.gender == 'female' %>
              <i class="bi bi-gender-female"></i>
            <% else %>
              <i class="bi bi-gender-ambiguous"></i>
            <% end %>
          </td>
          <td><%= student.date_of_birth %></td>
          <td><%= student.level.title %></td>
          <td>
            <%= link_to "Show", student, :class => "btn btn-secondary" %>
            <%= link_to "Edit", edit_student_path(student), :class => "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
